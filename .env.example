# PDS Environment Variables Example
# Copy this file to .env and fill in the values

# API Registry Configuration
API_REGISTRY_KEY=your_secure_api_key_here

# JWT Secret Keys (for authentication)
JWT_SECRET=your_jwt_secret_key_here
DRO_JWT_SECRET=your_dro_jwt_secret_here
FEP_JWT_SECRET=your_fep_jwt_secret_here

# Database Credentials (if needed)
MONGODB_URI=mongodb://username:password@localhost:27017/database
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=secure_password_here

# Production Settings
NODE_ENV=development
# Set to 'production' in production environment
